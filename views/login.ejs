<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Survey-app</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
    <meta content="Coderthemes" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico">

    <!-- App css -->
    <link href="assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="assets/css/app-modern.min.css" rel="stylesheet" type="text/css" id="app-style" />

</head>

<body class="loading" style="background-color: rgb(189, 189, 194);" data-layout-config='{"darkMode":false}'>
    <div class="account-pages pt-2 pt-sm-5 pb-4 pb-sm-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xxl-4 col-lg-5">
                    <div class="card">

                        <!-- Logo -->
                        <div class="card-header pt-4 pb-4 text-center bg-primary">
                            <a href="/">
                                <span><img style="width: 300px; height:200px" src="assets/images/logo-light.png" alt="" height="18"></span>
                            </a>
                        </div>

                        <div class="card-body p-4">

                            <div class="text-center w-75 m-auto">
                                <h4 class="text-dark-50 text-center mt-0 fw-bold">Log In</h4>
                                <p class="text-muted mb-4">Ingresa tu username y password para acceder al sistema.</p>
                            </div>

                            <form action="/login" method="POST">

                                <div class="mb-3">
                                    <label for="emailaddress" class="form-label">Username</label>
                                    <input name="user" class="form-control" type="text" id="username" required=""
                                        placeholder="username">
                                </div>

                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <div class="input-group input-group-merge">
                                        <input name="password" type="password" id="password" class="form-control"
                                            placeholder="password">
                                    </div>
                                </div>

                                <div class="mb-3 mb-0 text-center">
                                    <button  class="btn btn-primary" id="btn" type="submit"> Log In </button>
                                </div>

                            </form>
                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->


                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->

    <!-- bundle -->
    <script src="assets/js/vendor.min.js"></script>
    <script src="assets/js/app.min.js"></script>

</body>

</html>
<script>
    let btn = document.getElementById('btn')
    let username = document.getElementById('username')
    let password = document.getElementById('password')
    
    username.onkeypress = () => {
        if(password.value){
            btn.setAttribute('disabled',false)
        }
    }
    username.onchange = () => {
        if(password.value){
            btn.toggleAttribute('disabled')
        }
    }

    btn.onclick = () => {
        if (!username.value || !password.value) {
            alert('Debe completar los campos...')
            return
        }
    }

    password.onclick = () => {
        password.toggleAttribute('type',true)
    }
</script>